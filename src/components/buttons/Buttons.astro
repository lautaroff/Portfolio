<style>
    .buttons{
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin-top: 2rem;
    }
    .contact{
        background-color: #fff;
        color: #000;
        border: none;
        border-radius: 30px;
        padding: 10px 20px;
        width: 165px;
        height: 64px;
    }
    .contact a{
        text-decoration: none;
        color: #000;
        font-family: 'Poppins', sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    .contact:hover{
        color: #FF8661; 
        background-image: linear-gradient(135deg, #FF8661 45%, #FF0080 68%); 
        background-clip: text; 
        -webkit-background-clip: text; 
        -webkit-text-fill-color: transparent; 
        border: solid 2px #fff;
    }

    .cv{
        background-color: #000;
        color: #fff;
        border: solid 2px #fff;
        border-radius: 30px;
        padding: 10px 20px;
        width: 165px;
        height: 64px;
    }
    .cv a{
        text-decoration: none;
        color: #fff;
        font-family: 'Poppins', sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
    }
    .cv:hover{
        background: linear-gradient(135deg, #FF8661 45%, #FF0080 68%);
        border: none;
    }
    .cv:hover a {
    color: #000; /* Cambia el color del texto a negro */
    }
    @media (max-width: 768px) {
        .buttons{
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>