---
const {img ,alt, title, links} = Astro.props;
---
<div class="CardProyect">
    <img src=`/${img}` alt={alt} class="imgProyect">
    <div class="bottom">
        <div class="text">
            <h4>{title}</h4>
        </div>
        <div class="links">
            {links.map(link => (
                <a href={link.url} target="_blank" rel="noopener noreferrer" class="link-button">
                    {link.label}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 1 0 1z"/>
                    </svg>
                </a>
            ))}
        </div>
    </div>
</div>
<style>
    .CardProyect{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 350px;
        height: 300px;
        border-radius: 20px;
        background-color: var(--card-background);
        margin: 1rem;
        color: var(--principal-text);
    }
    .imgProyect{
        width: 350px;
        max-height: 230px;
        object-fit: cover;
        border-radius: 20px 20px 0 0;
    }
    .bottom{
        display: flex;
        align-items: center;
        padding: 1rem;
        flex-direction: row;
        width: 100%;
        justify-content: space-between;
    }
    .text{
        display: flex;
        flex-direction: column;
        margin-left: 1rem;
    }
    .links{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .link-button{
        display: flex;
        align-items: center;
        text-decoration: none;
        color: var(--principal-text);
        font-size: 0.8rem;
        gap: 0.5rem;
    }
    h4{
        font-size: 1.2rem;
        font-weight: 600;
        margin:0;
        
    } 
    .link-button svg{
        color: var(--principal-text);
        width: 1rem;
        height: 1rem;
    }
    @media (max-width: 768px) {
        .CardProyect{
            width: 100%;
            max-width: 350px;
            height: auto;
            justify-content: center;
            align-items: center;
        }
        h4{
            font-size: 1rem;
        }
        .link-button{
            font-size: 0.7rem;
        }
    }
    @media (max-width: 480px) {
        .CardProyect{
            width: 100%;
            height: auto;
        }
        h4{
            font-size: 1rem;
        }
        .link-button{
            font-size: 0.7rem;
        }
    }
    
</style>
