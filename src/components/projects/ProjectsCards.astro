---
const {img ,alt, title, links} = Astro.props;
---
<div class="CardProyect">
    <img src=`/${img}` alt={alt} class="imgProyect">
    <div class="bottom">
        <div class="text">
            <h4>{title}</h4>
        </div>
        <div class="links">
            {links.map(link => (
                <a href={link.url} target="_blank" rel="noopener noreferrer" class="link-button">
                    {link.label}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 1 0 1z"/>
                    </svg>
                </a>
            ))}
        </div>
    </div>
</div>
<style>
    .CardProyect{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        width: 350px;
        height: 320px;
        border-radius: 20px;
        background-color: var(--card-background);
        margin: 1rem;
        color: var(--principal-text);
        padding: 1rem;
        box-sizing: border-box;
    }
    .imgProyect{
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 15px;
        margin-bottom: 1rem;
    }
    .bottom{
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        gap: 0.5rem;
    }
    .text{
        text-align: center;
    }
    .links{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
    }
    .link-button{
        display: flex;
        align-items: center;
        text-decoration: none;
        color: var(--principal-text);
        font-size: 0.7rem;
        gap: 0.25rem;
        padding: 0.25rem 0.5rem;
        border: 1px solid var(--secondary-text);
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    .link-button:hover{
        background-color: var(--gradient);
        color: #000;
    }
    h4{
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
        line-height: 1.2;
    } 
    .link-button svg{
        color: var(--principal-text);
        width: 1rem;
        height: 1rem;
    }
    @media (max-width: 768px) {
        .CardProyect{
            width: 100%;
            max-width: 350px;
            height: auto;
            padding: 0.5rem;
        }
        h4{
            font-size: 1rem;
        }
        .link-button{
            font-size: 0.6rem;
        }
        .imgProyect{
            height: 150px;
        }
    }
    @media (max-width: 480px) {
        .CardProyect{
            width: 100%;
            height: auto;
            padding: 0.5rem;
        }
        h4{
            font-size: 0.9rem;
        }
        .link-button{
            font-size: 0.6rem;
        }
        .imgProyect{
            height: 120px;
        }
    }
    
</style>
