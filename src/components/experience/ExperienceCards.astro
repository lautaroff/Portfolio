---
const{img,alt,title, date, description} = Astro.props;
---
<div class="ExperienceCard">
    <div class="top">
        <img src=`/${img}` alt={alt} class="logo">
        <h4>{title}</h4>
        <p class="date">{date}</p>
    </div>
    <p class="description">{description}</p>
</div>
<style>
    .ExperienceCard{
        display: flex;
        flex-direction: column;
        justify-content: center;
      
        width: 810px;
        height: 116px;
        border-radius: 20px;
        margin: 1rem;
        text-decoration: none;
        color: var(--principal-text);
    }
    .logo{
        height: 50px;
        width: 50px;
        object-fit: cover;
        border-radius: 20px 20px 0 0;
        margin-left: 0;
    }
    .top{
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    h4{
        font-size: 1.2rem;
        font-weight: 600;
        margin-left:1rem;
    }
    .date{
        font-size: 0.8rem;
        color: var(--secondary-text);
        margin-left: auto; 
        
    }
    .description{
        font-size: 0.8rem;
        color: var(--secondary-text);
    }
    @media (max-width: 768px) {
        .ExperienceCard{
            width: 80%;
            height: auto;
        }
        h4{
            font-size: 1rem;
        }
        .description{
            font-size: 0.8rem;
        }
    }
    @media (max-width: 480px) {
        .ExperienceCard{
            width: 80%;
            height: auto;
        }
        h4{
            font-size: 1rem;
        }
        .description{
            font-size: 0.8rem;
        }
    }
</style>