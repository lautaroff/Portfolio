---
import AstroIconLight from '../../assets/tools/astro.astro';
import Python from '../../assets/tools/python.astro';
import Js from '../../assets/tools/js.astro';
import Html from '../../assets/tools/html.astro';
import Css from '../../assets/tools/css.astro';
import Nodejs from '../../assets/tools/nodejs.astro';
import Numpy from '../../assets/tools/NumPy.astro';
import Pandas from '../../assets/tools/Pandas.astro';
---
<div class="ExperienceTools">
    <h4>EXPERIENCE WITH</h4>
    <div class="tools">
        <Js/>
        <Html/>
        <Css/>
        <AstroIconLight/>
        <Nodejs/>
        <Python/>
        <Numpy/>
        <Pandas/>
    </div>
</div>
<style>
    .ExperienceTools{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 3rem;
    }
    h4{
        font-size: 1.5rem;
        color: var(--secondary-text);
        font-family: 'poppins', sans-serif;
        font-weight:normal;
        margin-bottom: 2rem;
    }
    .tools{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }
    @media (max-width: 768px) {
        h4{
            font-size: 1.5rem;
        }
        
    }
    @media (max-width: 480px) {
        h4{
            font-size: 1.2rem;
        }
    }
    .tools{
        flex-wrap: wrap;
        gap: 1rem;
    }
</style>