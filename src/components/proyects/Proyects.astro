---
import ProyectsCards from "./ProyectsCards.astro";


---
<section class="proyects" id="proyects">
    <h3 class="text-gradient">PROJECTS</h3>
    <div class="cards">
        <ProyectsCards img="hexabanner.jpg" alt="Hexadevs Academy banner" title="Hexadevs Academy" link="https://hexadevs.crobf.tech/"/>
        <ProyectsCards img="hexabanner.jpg" alt="Hexadevs Academy banner" title="Hexadevs Academy" link="https://hexadevs.crobf.tech/"/>
    </div>
</section>
<style>
    .proyects{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 3rem;
    }
    .cards{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }
    .text-gradient {
    color: #FF8661; 
    background-image: linear-gradient(180deg, #FF8661 0%, #D6491E 100%); 
    background-clip: text; 
    -webkit-background-clip: text; 
    -webkit-text-fill-color: transparent; 
    font-family: 'poppins', sans-serif;
    font-weight: bolder;
    font-size: 45px;
    }
    h3{
        font-size: 2rem;
        color: var(--principal-text);
        margin-bottom: 2rem;
    }
    @media (max-width: 768px) {
        h3{
            font-size: 1.5rem;
        }
        .cards{
            flex-direction: column;
            gap: 1rem;
        }
    }
    @media (max-width: 480px) {
        h3{
            font-size: 1.2rem;
        }
        .cards{
            flex-direction: column;
            gap: 1rem;
        }
    }
    </style>